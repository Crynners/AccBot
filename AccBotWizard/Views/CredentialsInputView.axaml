<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AccBotWizard.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AccBotWizard.Views.CredentialsInputView"
             x:DataType="vm:CredentialsInputViewModel">

    <StackPanel Spacing="20" MaxWidth="500">
        <TextBlock Text="API Credentials" Classes="header"/>
        <TextBlock Text="Enter your exchange API credentials. Make sure to create keys with trading permissions only."
                   Classes="description"/>

        <Border Padding="15" CornerRadius="8" Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                Margin="0,10,0,0">
            <StackPanel Spacing="5">
                <TextBlock Text="Security Tips:" FontWeight="SemiBold"/>
                <TextBlock Text="- Only enable trading permissions" Classes="description"/>
                <TextBlock Text="- Restrict withdrawal permissions if not needed" Classes="description"/>
                <TextBlock Text="- Use IP whitelist when available" Classes="description"/>
            </StackPanel>
        </Border>

        <ItemsControl ItemsSource="{Binding CredentialFields}" Margin="0,10,0,0">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="vm:CredentialField">
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="{Binding Label}" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Value}"
                                 PasswordChar="*"
                                 RevealPassword="{Binding !IsPassword}"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TextBlock Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   IsVisible="{Binding HasError}"/>
    </StackPanel>
</UserControl>
