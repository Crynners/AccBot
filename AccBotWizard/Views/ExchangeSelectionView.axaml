<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AccBotWizard.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AccBotWizard.Views.ExchangeSelectionView"
             x:DataType="vm:ExchangeSelectionViewModel">

    <StackPanel Spacing="20">
        <TextBlock Text="Select Your Exchange" Classes="header"/>
        <TextBlock Text="Choose the cryptocurrency exchange where you have an account and want to run your DCA strategy."
                   Classes="description"/>

        <ListBox ItemsSource="{Binding Exchanges}"
                 SelectedItem="{Binding SelectedExchange}"
                 Margin="0,10,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="vm:ExchangeInfo">
                    <Border Padding="15" Margin="0,5">
                        <Grid ColumnDefinitions="Auto,*">
                            <RadioButton IsChecked="{Binding $parent[ListBoxItem].IsSelected}"
                                         GroupName="Exchanges"
                                         VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="16"/>
                                <TextBlock Text="{Binding Description}"
                                           Classes="description"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>
