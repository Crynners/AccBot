@page
@model RegisterModel
@{
    ViewData["Title"] = L["Register_Title"];
    var culture = ViewContext.HttpContext.Items["Culture"] as string ?? "cs";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="text-center mb-4">
            <h1 class="display-5 fw-bold">
                <i class="bi bi-plus-circle text-orange me-2"></i>
                @L["Register_Title"]
            </h1>
            <p class="text-secondary lead">
                @L["Register_Subtitle"]
            </p>
        </div>

        <div class="card">
            <div class="card-header d-flex align-items-center gap-2">
                <i class="bi bi-wallet2 text-orange"></i>
                @L["Register_CardTitle"]
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="MiningAddress" class="form-label">
                            <i class="bi bi-currency-bitcoin text-yellow me-1"></i>
                            @L["Index_AddressLabel"]
                        </label>
                        <input asp-for="MiningAddress" class="form-control form-control-lg"
                               placeholder="@L["Index_AddressPlaceholder"]" autocomplete="off" />
                        <span asp-validation-for="MiningAddress" class="text-danger small"></span>
                        <small class="text-secondary mt-1 d-block">
                            @L["Index_AddressHelp"]
                        </small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="PoolVariant" class="form-label">
                            <i class="bi bi-globe text-blue me-1"></i>
                            @L["Index_PoolLabel"]
                        </label>
                        <select asp-for="PoolVariant" class="form-select form-select-lg">
                            <option value="solo">@L["Index_PoolSolo"]</option>
                            <option value="eusolo">@L["Index_PoolEuSolo"]</option>
                            <option value="ausolo">@L["Index_PoolAuSolo"]</option>
                        </select>
                        <span asp-validation-for="PoolVariant" class="text-danger small"></span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            @Model.ErrorMessage
                        </div>
                    }

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-circle me-2"></i>
                            @L["Register_Submit"]
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="/@culture/" class="text-secondary">
                <i class="bi bi-arrow-left me-1"></i>@L["Register_BackToHome"]
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
